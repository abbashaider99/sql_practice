SELECT * FROM WORKERS;

use human;
show databases;
drop database students;

create table person(
PersonID int PRIMARY KEY,
FirstName VARCHAR(255),
LastName VARCHAR(255),
Age int(10)
);

desc person;

create table Orders (
OrderID int Primary Key,
OrderNumber int(50),
PersonID int,
foreign key(PersonID) references person(PersonID)
);

desc Orders;


